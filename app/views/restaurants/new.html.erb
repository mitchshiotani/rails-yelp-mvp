<div class="container">
  <div class="row">
    <div class="col">
      <h1>Add New Restaurant</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <!-- [...] all the fields -->
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORY %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end %>

      <%= link_to "Back to all restaurants", restaurants_path %>
    </div>
  </div>
</div>
