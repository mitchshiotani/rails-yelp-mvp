<div class="container">
  <div class="row">
    <div class="col">
      <h1>Add New Review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <!-- [...] all the fields -->
        <%= f.input :content %>
        <%= f.input :rating, collection: Review::RATING %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end %>

      <%= link_to "Back to the restaurant", restaurant_path(@restaurant) %>
    </div>
  </div>
</div>
